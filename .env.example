# ========================================
# KONFIGURASI ENVIRONMENT - Workshop RS NUHA
# ========================================
# Cara penggunaan:
# 1. Copy file ini ke .env: cp .env.example .env
# 2. Sesuaikan nilai-nilai di bawah sesuai environment Anda
# ========================================

# ========================================
# KONFIGURASI SERVER
# ========================================
PORT_EXPRESS=3033
TIMEZONE=Asia/Jakarta
BASE_URL=localhost
APP_ENV=DEV
APP_AREA=LOCAL

# ========================================
# KONFIGURASI DATABASE (PostgreSQL)
# ========================================
DB_HOST=localhost
DB_USER=postgres
DB_PASS=postgres
DB_NAME=gateway_nuha_db
DB_PORT=5432

# ========================================
# KONFIGURASI REDIS
# ========================================
REDIS_HOST=redis://localhost:6379

# ========================================
# KONFIGURASI API NUHA SIMRS (Workshop)
# ========================================
# Hubungi admin NUHA SIMRS untuk mendapatkan kredensial
EXTERNAL_API_URL=http://ip-server-nuha:port
EXTERNAL_API_TOKEN=masukkan_jwt_token_dari_admin
EXTERNAL_API_KEY=masukkan_api_key_dari_admin
EXTERNAL_API_REFRESH_TOKEN=masukkan_refresh_token_dari_admin